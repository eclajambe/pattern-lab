<a href="{{ url }}" class="c-card__bio {{ styleModifier }}">

	<div class="c-card__header">
        {{#if cardImage }}
		<div class="c-card__media">
			{{> atoms-card-image src=cardImage }}
		</div>
		{{/ if }}
	</div>

	<div class="c-card__body">
		<h4 class="c-card__title type-title-medium">{{ name }}</h4>
		{{#if position}}<p class="c-card__excerpt">{{ position }}</p>{{/ if }}
	</div><!-- end c-card__body -->

	<div class="c-card__footer">
        {{#if cta }}
			{{> molecules-button buttonText=cta }}
        {{/ if }}
	</div>
</a><!-- end c-card -->